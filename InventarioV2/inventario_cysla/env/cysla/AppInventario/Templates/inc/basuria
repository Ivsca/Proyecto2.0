  function viewParcelDetails(id) {
    // Aquí puedes cargar los datos desde Django vía AJAX o usar datos estáticos
    const parcelaEjemplo = {
      1: { nombre: "Parcela N°1", descripcion: "Terreno fértil para cultivos.", imagen: "{% static 'img/1.jpg' %}" },
